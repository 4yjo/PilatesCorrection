<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/align"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Settings">

    <TextView
        android:id="@+id/IntroSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/introSettings" />

    <TextView
        android:id="@+id/label_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_ip"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userInputIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/input_ip"
        android:autofillHints="Enter IP Adress" />

    <TextView
        android:id="@+id/label_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_port"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userInputPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="@string/input_port"
        android:autofillHints="Enter Port Number"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSubmit"
        android:text="@string/submitButton" />


</LinearLayout>