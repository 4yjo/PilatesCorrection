<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.myfirsttestapplication.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_settings2"
            app:destination="@id/settings2" />
    </activity>
    <activity
        android:id="@+id/settings2"
        android:name="com.example.myfirsttestapplication.Settings"
        android:label="Settings" >
        <action
            android:id="@+id/action_settings2_to_mainActivity"
            app:destination="@id/mainActivity" />
    </activity>
</navigation>